@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Register
@if (TempData["AuthError"] != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @TempData["AuthError"]
    </div>
}


<form action="/KayitOl" method="post" autocomplete="off">
    <p>
        <input required type="email" name="mail" placeholder="E-Mail Adresiniz" value="@Model.Mail">
    </p>
    <p>
        <input required type="text" name="username" placeholder="Kullanıcı adınız" value="@Model.UserName" />
    </p>
    <p>
        <input required type="password" name="password" placeholder="Şifre" />
    </p>

    <button>Kayıt Ol</button>
</form>