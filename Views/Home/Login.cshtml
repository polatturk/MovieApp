@using Microsoft.AspNetCore.Mvc.TagHelpers
@if (TempData["AuthError"] != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @TempData["AuthError"]
    </div>
}

<form action="/Login" method="post" autocomplete="off">
    <p>
        <input required type="text" name="username" placeholder="Kullanıcı Adı" />
    </p>
    <p>
        <input required type="password" name="password" placeholder="Şifre" />
    </p>
    
    <button class="btn-success">Giriş Yap</button>
</form>
<p>
    <a href="/home/register">Kayıt Ol</a>
</p>
<br>